@model ReportAddModel


@{
	

	var select = ViewBag.Select as List<Violazioni>;
	ViewData["Title"] = "Aggiungi Registro";

}

<h1 class="mb-5">Registra un nuovo verbale</h1>

@if (TempData["Error"] != null)
{
	<span class="text-danger">@TempData["Error"]</span>
}



<form method="post" asp-controller="Police" asp-action="SaveAdd" >

	<fieldset class ="row g-3 border-1 mb-4">
        <legend>Anagrafica</legend>
		<div class="form-group col-md-4">
			<label asp-for="Nome" class="control-label"></label>
			<input asp-for="Nome" class="form-control" type="text" />
		</div>
		<div class="form-group col-md-4">
			<label asp-for="Cognome" class="control-label"></label>
			<input asp-for="Cognome" class="form-control" type="text" />
		</div>
		<div class="form-group col-md-4">
			<label asp-for="CodFisc" class="control-label">Codice Fiscale</label>
			<input asp-for="CodFisc" class="form-control" type="text" />
		</div>
		<div class="form-group col-md-6">
			<label asp-for="Indirizzo" class="control-label"></label>
			<input asp-for="Indirizzo" class="form-control"type="text" />
		</div>
		<div class="form-group col-md-3">
			<label asp-for="Citta" class="control-label">Città</label>
			<input asp-for="Citta" class="form-control" type="text" />
		</div>
		<div class="form-group col-md-3">
			<label asp-for="CAP" class="control-label"></label>
			<input asp-for="CAP" class="form-control" type="text" />
		</div>
	 </fieldset>

	<fieldset class="row g-3 border-1 mb-4">
        <legend>Dati Verbale</legend>
		<div class="form-group col-md-3">
			<label asp-for="IdVerbale" class="control-label">N° Verbale</label>
			<input asp-for="IdVerbale" class="form-control" type="number" />
		</div>
		<div class="form-group col-md-3">
			<label asp-for="DataViolazione" class="control-label"> Data Violazione</label>
			<input asp-for="DataViolazione" class="form-control" type="datetime-local" />
		</div>
		<div class="form-group col-md-3">
			<label asp-for="NominativoAgente" class="control-label">Nome Agente</label>
			<input asp-for="NominativoAgente" class="form-control" type="text" />
		</div>
		<div class="form-group col-md-3">
			<label asp-for="DataTrascrizioneVerbale" class="control-label">Data Trascrizione Verbale</label>
			<input asp-for="DataTrascrizioneVerbale" class="form-control" type="datetime-local" />
		</div>
		<div class="form-group col-md-3">
			<label asp-for="IndirizzoViolazione" class="control-label">Indirizzo Violazione</label>
			<input asp-for="IndirizzoViolazione" class="form-control" type="text" />
		</div>

		<div class="form-group col-md-3">
			<label for="violazione" asp-for="IdViolazione" class="control-label">Tipo di Violazione</label>
			<select asp-for="IdViolazione" class="form-control">
				@if (select != null)
				{
					@foreach (var item in select)
					{
						<option value="@item.Id">@item.Id</option>
					}
				}
			</select>
		</div>

		<div class="form-group col-md-3">
			<label asp-for="Importo" class="control-label"></label>
			<input asp-for="Importo" class="form-control" type="number" step="0.01" />
		</div>
		<div class="form-group col-md-3">
			<label asp-for="DecurtamentoPunti" class="control-label"></label>
			<input asp-for="DecurtamentoPunti" class="form-control" type="number" />
		</div>
    </fieldset>
 

    <div class="form-group">
        <input type="submit" value="Crea" class="btn btn-primary" />
    </div>
</form>


